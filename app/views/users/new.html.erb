<h1>Register a new User!</h1>

<%= form_for @user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <%= f.submit "Add new user!" %>

<% end %>

<%= link_to "Back to user list!", users_path %>